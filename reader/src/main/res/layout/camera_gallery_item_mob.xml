<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/camera_gallery_item_padding">

    <TextView
        android:id="@+id/camera_gallery_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/profile_setting_image_margin"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_marginLeft="20dp" />


    <TextView
        android:id="@+id/camera_gallery_text"
        android:layout_width="wrap_content"
        android:textSize="@dimen/book_title_text_size"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/camera_gallery_image"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>
