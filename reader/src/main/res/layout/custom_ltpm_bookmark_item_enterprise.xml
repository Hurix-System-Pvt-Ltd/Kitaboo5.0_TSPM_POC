<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" >

    <View
        android:layout_width="20dp"
        android:layout_height="match_parent" >
    </View>

    <RelativeLayout
        android:id="@+id/resource_list_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/imgresourcetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="center"

            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/btnArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:textColor="@color/white_transparency"
            android:textSize="@dimen/enterprise_reader_toc_text_size"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/btnArrow"
            android:layout_toRightOf="@+id/imgresourcetype"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="10"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/txtresourcepageno"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    android:text="TextView"
                    android:textColor="@color/kitaboo_main_color"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>