<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_centerInParent="true"
    android:layout_gravity="center">

        <TextView
            android:id="@+id/sortByHeaderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SORT BY"
            android:textColor="@color/kitaboo_main_color"
            android:fontFamily="bold"
            android:textSize="22dp"
            android:layout_margin="10dp">
        </TextView>
        <View
            android:id="@+id/sortByViewline"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/sortByHeaderTxt"
            android:background="@color/grey">
        </View>

        <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_below="@+id/sortByViewline">
    <RadioGroup
        android:id="@+id/sortbyRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


            <TextView
                android:id="@+id/sortByTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_margin="10dp">
            </TextView>

            <RadioButton
                android:id="@+id/TitleTxtAtoZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A to Z"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/sortByTitleTxt"
                android:textColor="#333333">
            </RadioButton>

            <RadioButton
                android:id="@+id/TitleTxtZtoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Z to A"
                android:textColor="#333333"
                android:layout_margin="5dp"
                android:layout_below="@+id/TitleTxtAtoZ"
                android:textSize="15dp"
                >
            </RadioButton>


            <View
                android:id="@+id/sortByTitleViewline"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@+id/TitleTxtZtoA"
                android:background="@color/grey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
            </View>

            <TextView
                android:id="@+id/sortByAuthorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="20dp"
                android:layout_below="@+id/sortByTitleViewline"
                android:layout_margin="10dp"
                android:textColor="@color/black">
            </TextView>

            <RadioButton
                android:id="@+id/AuhtorTxtAtoZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A to Z"
                android:textColor="#333333"
                android:layout_margin="5dp"
                android:layout_below="@+id/sortByAuthorTxt"
                android:textSize="15dp">
            </RadioButton>
            <RadioButton
                android:id="@+id/AuthorTxtZtoA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Z to A"
                android:layout_margin="5dp"
                android:textColor="#333333"
                android:layout_below="@+id/AuhtorTxtAtoZ"
                android:textSize="15dp">
            </RadioButton>

            <View
                android:id="@+id/sortByAuhtorViewline"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@+id/AuthorTxtZtoA"
                android:background="@color/grey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
            </View>

            <TextView
                android:id="@+id/sortByISBNTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISBN"
                android:layout_below="@+id/sortByAuhtorViewline"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="@color/black">
            </TextView>
            <RadioButton
                android:id="@+id/AscendingISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ascending order"
                android:layout_margin="5dp"
                android:textColor="#333333"
                android:layout_below="@+id/sortByISBNTxt"
                android:textSize="15dp">
            </RadioButton>
            <RadioButton
                android:id="@+id/DescendingISBN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descending order"
                android:textColor="#333333"
                android:layout_margin="5dp"
                android:layout_below="@+id/AscendingISBN"
                android:textSize="15dp">
            </RadioButton>

            <View
                android:id="@+id/sortByISBNViewline"
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@+id/DescendingISBN"
                android:background="@color/grey"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
            </View>

            <TextView
                android:id="@+id/txtPublishedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published Date"
                android:textSize="20dp"
                android:layout_below="@+id/sortByISBNViewline"
                android:layout_margin="10dp"
                android:textColor="@color/black">
            </TextView>
            <RadioButton
                android:id="@+id/txtOldtoNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Old to New"
                android:layout_margin="5dp"
                android:textColor="#333333"
                android:layout_below="@+id/txtPublishedDate"
                android:textSize="15dp">
            </RadioButton>
            <RadioButton
                android:id="@+id/txtNewtoOld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New to Old"
                android:textColor="#333333"
                android:layout_margin="5dp"
                android:layout_below="@+id/txtOldtoNew"
                android:textSize="15dp">
            </RadioButton>
    </RadioGroup>
    </ScrollView>
</RelativeLayout>
