<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">


    <RelativeLayout
        android:id="@+id/relative01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4">

        <LinearLayout
            android:id="@+id/classandstudentholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/imagebackArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/back_black_arrow"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtAnalytics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/imagebackArrow"
                        android:gravity="center"
                        android:text="Analytics"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtClasses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:longClickable="true"
                        android:paddingRight="10dp"
                        android:text="Class 8"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="21sp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/RelativeLayout1"
                android:layout_weight="1.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">


                    <ImageView
                        android:id="@+id/bookThumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="35dp"
                        android:layout_marginStart="35dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder" />

                    <LinearLayout
                        android:id="@+id/textLayoutHeading"
                        android:layout_width="614dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/bookThumbnail"
                        android:layout_toRightOf="@+id/bookThumbnail"
                        android:gravity="top"
                        android:orientation="vertical"
                        android:paddingLeft="30dp"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/txtBookName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="5dp"
                            android:text="My Book"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtBookType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/txtBookName"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Book Type"
                            android:textColor="#666666"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtBookAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtBookType"
                            android:layout_weight="1"
                            android:paddingBottom="5dp"
                            android:text="Book Author"
                            android:textColor="#666666"
                            android:textSize="20sp" />

                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">


                <LinearLayout
                    android:id="@+id/contentsRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/classandstudentholder"
                    android:layout_weight=".8"
                    tools:ignore="NotSibling">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="19dp"
                        android:background="#ebebeb">

                        <RelativeLayout
                            android:id="@+id/allComponentHolder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="30dp">

                            <LinearLayout
                                android:id="@+id/RelativeLayoutRow1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2">

                                <RelativeLayout
                                    android:id="@+id/bookAssigned"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="0.8"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtBookAssigned1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="15dp"
                                        android:text="Book Assigned"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <ProgressBar
                                        android:id="@+id/pbBookAssigned"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/txtBookAssigned1"
                                        android:layout_centerVertical="true"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="20"
                                        android:progressDrawable="@drawable/circular_pg_purple"
                                        android:secondaryProgress="100" />

                                    <TextView
                                        android:id="@+id/txtBookAssigned2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/pbBookAssigned"
                                        android:layout_toEndOf="@+id/pbBookAssigned"
                                        android:layout_toRightOf="@+id/pbBookAssigned"
                                        android:paddingLeft="20dp"
                                        android:text="2"
                                        android:textColor="#6620c2"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtBookAssigned3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@id/txtBookAssigned2"
                                        android:layout_toEndOf="@+id/txtBookAssigned2"
                                        android:layout_toRightOf="@+id/txtBookAssigned2"
                                        android:text="/10"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/AvgReadingTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/bookAssigned"
                                    android:layout_weight="1.2"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgReadingTime1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="15dp"
                                        android:text="Avg Reading Time"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/txtAvgReadingTime2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/txtAvgReadingTime1"
                                        android:paddingBottom="20dp"
                                        android:paddingLeft="15dp"
                                        android:text="25"
                                        android:textColor="#820082"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtAvgReadingTime3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/txtAvgReadingTime2"
                                        android:layout_toEndOf="@+id/txtAvgReadingTime2"
                                        android:layout_toRightOf="@+id/txtAvgReadingTime2"
                                        android:paddingLeft="10dp"
                                        android:text="mins"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/RelativeLayoutRow2"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@id/RelativeLayoutRow1"
                                android:paddingTop="20dp">

                                <RelativeLayout
                                    android:id="@+id/AvgPagesRead"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgPagesRead1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:padding="15dp"
                                        android:text="Avg Pages Read"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/txtAvgPagesRead2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/txtAvgPageRead1"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@id/txtAvgPageRead1"
                                        android:layout_centerVertical="true"
                                        android:paddingLeft="15dp"
                                        android:text="10"
                                        android:textColor="#1313af"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtAvgPagesRead3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_toEndOf="@+id/txtAvgPagesRead2"
                                        android:layout_toRightOf="@+id/txtAvgPagesRead2"
                                        android:paddingBottom="7dp"
                                        android:text="/20"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                    <ProgressBar
                                        android:id="@+id/pbhAvgPageRead"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_toEndOf="@+id/txtAvgPagesRead3"
                                        android:layout_toRightOf="@+id/txtAvgPagesRead3"
                                        android:paddingBottom="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:progress="50"
                                        android:progressBackgroundTint="#767171"
                                        android:progressTint="#1313af" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/RelativeLayoutRow3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/RelativeLayoutRow2"
                                android:paddingTop="20dp"
                                android:weightSum="3">

                                <RelativeLayout
                                    android:id="@+id/AvgReadingSession"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgReadingSession1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="15dp"
                                        android:text="Avg Reading Session"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/txtAvgReadingSession2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/txtAvgReadingSession1"
                                        android:layout_centerHorizontal="true"
                                        android:gravity="center"
                                        android:paddingTop="10dp"
                                        android:text="2"
                                        android:textColor="#178200"
                                        android:textSize="60dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/AvgReadingSessionTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgReadingSessionTime1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="15dp"
                                        android:text="Avg Reading Time"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/txtAvgReadingSessionTime2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:paddingBottom="13dp"
                                        android:paddingLeft="10dp"
                                        android:text="10"
                                        android:textColor="#1e53ae"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtAvgReadingSessionTime3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/txtAvgReadingSessionTime2"
                                        android:layout_toEndOf="@+id/txtAvgReadingSessionTime2"
                                        android:layout_toRightOf="@+id/txtAvgReadingSessionTime2"
                                        android:foregroundGravity="center"
                                        android:paddingLeft="10dp"
                                        android:text="min"
                                        android:textColor="@color/Black_Color"

                                        android:textSize="40dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/AvgPageRead"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgPageRead1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="15dp"
                                        android:text="Avg Page Read"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/txtAvgPageRead2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="15dp"
                                        android:text="1"
                                        android:textColor="#005c4d"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/avg_pages_read_per_seesion_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/txtAvgPageRead2"
                                        android:layout_toEndOf="@+id/txtAvgPageRead2"
                                        android:layout_toRightOf="@+id/txtAvgPageRead2"
                                        android:gravity="center"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="20dp"
                                        android:text="Page"
                                        android:textAlignment="center"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/RelativeLayoutRow4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/RelativeLayoutRow3"
                                android:paddingTop="20dp"
                                android:weightSum="2">

                                <RelativeLayout
                                    android:id="@+id/AvgNotesShared"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="1"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgNotesShared1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="18sp"
                                        android:text="Avg Notes Shared"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <ProgressBar
                                        android:id="@+id/pgAvgNotesShared"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/txtAvgNotesShared1"
                                        android:layout_centerVertical="true"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="100"
                                        android:progressDrawable="@drawable/circular_pg_brown"
                                        android:secondaryProgress="100" />

                                    <TextView
                                        android:id="@+id/txtAvgNotesShared2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/pgAvgNotesShared"
                                        android:layout_centerHorizontal="true"
                                        android:layout_toEndOf="@id/pgAvgNotesShared"
                                        android:layout_toRightOf="@id/pgAvgNotesShared"
                                        android:paddingLeft="20dp"
                                        android:text="2"
                                        android:textColor="#804d00"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtAvgNotesShared3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/txtAvgNotesShared2"
                                        android:layout_toEndOf="@+id/txtAvgNotesShared2"
                                        android:layout_toRightOf="@+id/txtAvgNotesShared2"
                                        android:text="/2"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/AvgHighlightShared"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_weight="1"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgHighlightShared1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="15dp"
                                        android:text="Avg Highlight Shared"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <ProgressBar
                                        android:id="@+id/pbAvgHighlightShared"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="150dp"
                                        android:layout_height="100dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/txtAvgHighlightShared1"
                                        android:layout_centerVertical="true"
                                        android:indeterminate="false"
                                        android:max="100"
                                        android:progress="50"
                                        android:progressDrawable="@drawable/circular_pg_green"
                                        android:secondaryProgress="100" />

                                    <TextView
                                        android:id="@+id/txtAvgHighlightShared2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/pbAvgHighlightShared"
                                        android:layout_centerHorizontal="true"
                                        android:layout_toEndOf="@+id/pbAvgHighlightShared"
                                        android:layout_toRightOf="@+id/pbAvgHighlightShared"
                                        android:paddingLeft="20dp"
                                        android:text="1"
                                        android:textColor="#006630"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtAvgHighlightShared3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/txtAvgHighlightShared2"
                                        android:layout_toEndOf="@+id/txtAvgHighlightShared2"
                                        android:layout_toRightOf="@+id/txtAvgHighlightShared2"
                                        android:text="/2"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/RelativeLayoutRow5"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_below="@id/RelativeLayoutRow4"
                                android:paddingTop="20dp">

                                <RelativeLayout
                                    android:id="@+id/AvgResourceViewed"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/components_color">

                                    <TextView
                                        android:id="@+id/txtAvgResourceView1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:padding="15dp"
                                        android:text="Avg Resource Viewed"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/txtAvgResourceView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:paddingLeft="15dp"
                                        android:text="4"
                                        android:textColor="#783505"
                                        android:textSize="60dp" />

                                    <TextView
                                        android:id="@+id/txtAvgResourceView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/txtAvgResourceView2"
                                        android:layout_toEndOf="@+id/txtAvgResourceView2"
                                        android:layout_toRightOf="@+id/txtAvgResourceView2"
                                        android:text="/20"
                                        android:textColor="@color/Black_Color"
                                        android:textSize="40dp" />

                                    <ProgressBar
                                        android:id="@+id/pbhAvgResourceView"
                                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_toEndOf="@+id/txtAvgResourceView3"
                                        android:layout_toRightOf="@+id/txtAvgResourceView3"
                                        android:paddingBottom="20dp"
                                        android:paddingLeft="20dp"
                                        android:paddingRight="20dp"
                                        android:progress="20"
                                        android:progressBackgroundTint="#767171"
                                        android:progressTint="#783505" />

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/RelativeLayoutRow5"
                                android:paddingTop="15dp">

                            </LinearLayout>

                        </RelativeLayout>

                    </ScrollView>

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/innerrelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9">

                <FrameLayout
                    android:id="@+id/poweredByContainer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:clickable="false"
