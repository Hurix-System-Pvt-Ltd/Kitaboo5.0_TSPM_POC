<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_category_list_item_height"
    android:orientation="horizontal"
   >

    <View
        android:id="@+id/categoryShade"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/kitaboo_main_color"
        />

    <TextView
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="`"
        android:textSize="@dimen/drawer_category_list_txt_size"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/abc_action_bar_subtitle_bottom_margin_material"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:text="TextView"
        android:textColor="@color/black_grey"
        android:textSize="@dimen/drawer_category_list_txt_size" />

</LinearLayout>