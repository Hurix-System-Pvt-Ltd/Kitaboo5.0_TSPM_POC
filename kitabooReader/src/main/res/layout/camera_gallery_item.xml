<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/camera_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/camera_gallery_item_padding">

    <TextView
        android:id="@+id/camera_gallery_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/profile_setting_image_margin"
        android:gravity="center"
        android:padding="10dp"/>


    <TextView
        android:id="@+id/camera_gallery_text"
        android:layout_marginTop="@dimen/camera_gallery_padding"
        android:layout_marginBottom="@dimen/camera_gallery_padding"
        android:layout_width="wrap_content"
        android:textSize="@dimen/book_title_text_size"
        android:layout_height="wrap_content"/>

</LinearLayout>
