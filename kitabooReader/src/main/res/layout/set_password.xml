<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/old_password_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:text="@string/profile_setting_current_password_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.hurix.kitaboocloud.common.ClearableEditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="left"
                android:inputType="textPassword"
                android:maxLines="1"
                 android:textColor="@android:color/black"
                android:scrollHorizontally="true" />

            <TextView
                android:id="@+id/new_password_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dp"
                android:gravity="left"
                 android:textColor="@android:color/black"
                android:text="@string/profile_setting_current_new_password_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.hurix.kitaboocloud.common.ClearableEditText
                android:id="@+id/new_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="left"
                android:inputType="textPassword"
                android:maxLines="1"
                 android:textColor="@android:color/black"
                android:scrollHorizontally="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/password_confirm_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="left"
                 android:textColor="@android:color/black"
                android:text="@string/profile_setting_current_confirm_new_password_text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.hurix.kitaboocloud.common.ClearableEditText
                android:id="@+id/password_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:gravity="left"
                android:inputType="textPassword"
                android:maxLines="1"
                 android:textColor="@android:color/black"
                android:scrollHorizontally="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>