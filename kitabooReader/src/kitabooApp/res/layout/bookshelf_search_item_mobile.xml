<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_container_height"
    android:layout_marginLeft="@dimen/search_container_left_right_margin"
    android:layout_marginRight="@dimen/search_container_left_right_margin"
    android:layout_marginTop="@dimen/search_container_top_margin">

    <ImageView
        android:id="@+id/iv_book_thumb"
        android:layout_width="@dimen/search_bookthumb_width"
        android:layout_height="@dimen/search_bookthumb_height"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/search_common_margin"
        android:layout_marginLeft="@dimen/search_common_margin"
        android:layout_marginTop="@dimen/search_common_margin"
         />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/search_common_margin"
        android:layout_marginLeft="@dimen/search_container_top_margin"
        android:layout_marginRight="@dimen/search_common_margin"
        android:layout_marginTop="@dimen/search_common_margin"
        android:layout_toRightOf="@+id/iv_book_thumb">

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="-0.8sp"
            android:text="Understanding Nutrition"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_no_of_instances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_book_title"
            android:layout_marginTop="@dimen/search_margin_between_text_view"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="-2sp"
            android:text=""
            android:textColor="#0d6c9c"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no_of_instances"
            android:layout_marginTop="@dimen/search_margin_between_text_view"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="0.4sp"
            android:text="Topic: Science"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_book_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_topic_name"
            android:layout_marginTop="@dimen/search_margin_between_text_view"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:text="UNDERSTANDING NUTRITION emphasizes strong science and nutrition basics, hands-on learning, and the most current coverage available. Packaged with the 2015 Dietary Guidelines, the 14th Edition includes new and updated topics in every chapter, quick- r... reference tables, expansive weight loss information, thorough coverage ... fitness and energy systems, and much more."
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>
</LinearLayout>
