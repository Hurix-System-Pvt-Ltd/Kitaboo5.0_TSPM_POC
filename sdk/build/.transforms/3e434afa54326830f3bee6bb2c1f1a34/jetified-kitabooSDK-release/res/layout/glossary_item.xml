<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pop_width"
    android:layout_height="@dimen/pop_height"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="12dp" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:id="@+id/top_path"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/glossary_audioPath"
                android:layout_width="40dp"
                android:layout_height="40dp"
               android:layout_margin="2dp"
                android:text="Word"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:focusable="true"/>

            <TextView
                android:id="@+id/glossary_videoPath"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="video"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:layout_below="@+id/glossary_audioPath"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/glossary_imagePath"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_below="@id/glossary_imagePath"
                android:text="image"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/glossary_urlPath"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_below="@id/glossary_urlPath"
                android:text="url"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_path"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:layout_below="@+id/top_path"
            >
        <TextView
            android:id="@+id/glossary_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <TextView
            android:id="@+id/glossary_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Keyword"
            android:textColor="@color/black"
            android:layout_below="@+id/glossary_word"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/glossary_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/glossary_keyword"
            android:text="This is the description of the item. \n\n\n\n\n\nChecking for a longer string. \n\nSo if this goes beyond."
            android:textColor="@color/black"/>
</LinearLayout>
    </RelativeLayout>
</ScrollView>