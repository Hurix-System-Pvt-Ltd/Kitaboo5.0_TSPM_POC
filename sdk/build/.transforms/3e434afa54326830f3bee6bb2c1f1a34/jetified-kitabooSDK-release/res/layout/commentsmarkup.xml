<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <Button
        android:id="@+id/closebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/closebutton"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:id="@+id/commentsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comments"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/commentsdescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="commentsmarkup"
                android:textColor="@android:color/black" />
            <!--
                <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/commentstext"
                android:textColor="@android:color/black" android:layout_below="@+id/closebutton"
                android:background="@android:color/white" android:text="comments markup text is here" />
            -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
