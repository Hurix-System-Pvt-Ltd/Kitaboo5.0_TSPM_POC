<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bookMarkPopUpRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/audio_view_border"
    android:padding="20dp">

    <TextView
        android:id="@+id/bookMarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_grey"
        android:text="@string/audio_book_add_bookmark_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/audioBookMarkEditText"
        android:layout_below="@+id/bookMarkTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_grey"

        android:background="@null"
        android:focusable="true"
        android:padding="10dp"/>

    <View
        android:id="@+id/mDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="1dp"
        android:layout_below="@+id/audioBookMarkEditText"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/audioBookMarkDurationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audioBookMarkEditText"
        android:textColor="@color/gray_active_icon"
        android:padding="10dp"
        />



    <Button
        android:id="@+id/cancelBookMarkButton"
        android:layout_below="@+id/audioBookMarkDurationTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancel"
        android:background="@drawable/roundedwhitebuttons"
        android:textColor="@color/black_grey"
        android:textAllCaps="false"
        android:padding="10dp"/>
    <Button
        android:id="@+id/addBookMarkButton"
        android:layout_below="@+id/audioBookMarkDurationTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/audio_book_add_bookmark"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/blue_rounded_square"
        android:padding="10dp"/>



</RelativeLayout>