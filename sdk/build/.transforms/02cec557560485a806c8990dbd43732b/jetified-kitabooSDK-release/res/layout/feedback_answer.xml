<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<ScrollView
    android:layout_width="@dimen/fib_pop_width"
    android:layout_height="@dimen/fib_pop_height"
    android:id="@+id/answerPopup"
    android:background="@drawable/fib_feedback_bg"
    android:layout_gravity="center">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtalerttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="@string/alert_instant_feedback_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="TextView"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="19sp" />

</LinearLayout>
</ScrollView>
    </RelativeLayout>