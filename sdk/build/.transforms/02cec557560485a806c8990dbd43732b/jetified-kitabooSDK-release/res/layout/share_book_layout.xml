<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/black"
    android:alpha="0.8">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:alpha="1"
        android:padding="5dp">
    <ImageView
        android:id="@+id/book_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/book_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textSize="20sp"
      android:padding="10dp"
      android:text="@string/books_share_lable"
      android:textColor="@color/white"
      android:layout_gravity="center_horizontal"
      />
    <RelativeLayout
        android:id="@+id/accesskeylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:background="@android:color/transparent"
        >

        <TextView
            android:id="@+id/submittxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/emailid_edttext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/submittxt"
            android:textColor="@color/white"
            android:background="@drawable/book_share_edittext_border"
            android:hint="@string/share_edittext_hint_text"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#b5b7b6"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:paddingBottom="4dp"/>

    </RelativeLayout>
</LinearLayout>
</LinearLayout>